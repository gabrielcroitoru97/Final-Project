<div>
  <div>
    <h2>
      <a href="/users/edit">Edit profile</a>
    </h2>
  <div>
  <div>
    <h1>
      List of all favorite places
    </h1>
  </div>
</div>

<hr>


<hr>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Place
        </th>

        <th>
          Note
        </th>

        <th>
          Added On
        </th>

        <th>
          Updated On
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_favorite_places.each do |a_favorite_place| %>
      <tr>

        <td>
          <%= a_favorite_place.place.name %>
        </td>

        <td>
          <%= a_favorite_place.note %>
        </td>

        <td>
          <%= time_ago_in_words(a_favorite_place.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_favorite_place.updated_at) %> ago
        </td>

        <td>
          <a href="/work_locations/<%=a_favorite_place.place.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
