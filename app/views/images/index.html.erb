<div>
  <div>
    <h1>
      List of all images
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new image
    </h2>

    <form action="/insert_image" method="post">
      <div>
        <label for="location_id_box">
          Location
        </label>

        <input type="text" id="location_id_box" name="query_location_id">
      </div>

      <div>
        <label for="poster_id_box">
          Poster
        </label>

        <input type="text" id="poster_id_box" name="query_poster_id">
      </div>

      <div>
        <label for="picture_box">
          Picture
        </label>

        <input type="text" id="picture_box" name="query_picture">
      </div>

      <button>
        Create image
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Location
        </th>

        <th>
          Poster
        </th>

        <th>
          Picture
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_images.each do |an_image| %>
      <tr>
        <td>
          <%= an_image.id %>
        </td>

        <td>
          <%= an_image.location_id %>
        </td>

        <td>
          <%= an_image.poster_id %>
        </td>

        <td>
          <%= an_image.picture %>
        </td>

        <td>
          <%= time_ago_in_words(an_image.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_image.updated_at) %> ago
        </td>

        <td>
          <a href="/images/<%= an_image.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
