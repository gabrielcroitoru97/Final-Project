<div>
  <div>
    <h1>
      List of all favorite places
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new favorite place
    </h2>

    <form action="/insert_favorite_place" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="place_id_box">
          Place
        </label>

        <input type="text" id="place_id_box" name="query_place_id">
      </div>

      <div>
        <label for="note_box">
          Note
        </label>

        <input type="text" id="note_box" name="query_note">
      </div>

      <button>
        Create favorite place
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Place
        </th>

        <th>
          Note
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_favorite_places.each do |a_favorite_place| %>
      <tr>
        <td>
          <%= a_favorite_place.id %>
        </td>

        <td>
          <%= a_favorite_place.user_id %>
        </td>

        <td>
          <%= a_favorite_place.place_id %>
        </td>

        <td>
          <%= a_favorite_place.note %>
        </td>

        <td>
          <%= time_ago_in_words(a_favorite_place.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_favorite_place.updated_at) %> ago
        </td>

        <td>
          <a href="/favorite_places/<%= a_favorite_place.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
